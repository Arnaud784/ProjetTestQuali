<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="windowPlaceholder" minWidth="400.0" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #808896;" stylesheets="@../resources/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quali.controller.CanvasController">
   <top>
      <HBox fx:id="header" alignment="CENTER_RIGHT" prefWidth="200.0" style="-fx-background-color: #3d424a;" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="minimize" alignment="CENTER" contentDisplay="CENTER" prefWidth="30.0" styleClass="btn-header" text="➖" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="4.0" left="10.0" right="10.0" top="4.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="maximize" alignment="CENTER" contentDisplay="CENTER" prefWidth="30.0" styleClass="btn-header" text="⬛" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="close" alignment="CENTER" contentDisplay="CENTER" prefWidth="30.0" styleClass="btn-header" text="❌" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
   </center>
</BorderPane>
